<script>
    var retrievedFullData = JSON.parse(localStorage.getItem('sellValue'));
    var accountInfo = JSON.parse(JSON.parse(localStorage.getItem('accountInfo')));

    document.getElementById('coin_value_sell').innerHTML = Intl.NumberFormat().format(retrievedFullData) + ' <%= coin %>';
    document.getElementById('sumPriceSell').innerHTML = Intl.NumberFormat().format(parseFloat(retrievedFullData) * parseFloat(<%= rate %>));
    document.getElementById('address_receive_number').innerHTML = accountInfo.accountNumber;
    document.getElementById('address_receive_name').innerHTML = accountInfo.accountName;
</script>