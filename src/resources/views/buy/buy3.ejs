                                        <% listBank.some(function(el) { %>
                                            <% if (el.code == JSON.parse(agency.bankAccounts)[0].bankCode) { %>
                                                <%= el.name %>
                                            <% } %>
                                        <% }); %>
                                    </span>
                                </div>
                            </div>

                        </div>

